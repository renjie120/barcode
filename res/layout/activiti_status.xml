<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:background="@drawable/btn_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/titile_gre_ym"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:gravity="center|center_vertical"
                android:text="@string/title_huodong"
                android:textColor="@color/white"
                android:textSize="@dimen/title_textsize" />

            <Button
                android:id="@+id/returnBtn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:background="@drawable/logo" />
        </FrameLayout>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" >

            <TableRow>

                <ImageView
                    android:id="@+id/activity_pic"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/qiandao_height"
                    android:layout_weight="1"
                    android:background="@drawable/paper" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/qiandao_height"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/button1" />

                    <TextView
                        android:id="@+id/yishouchu"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textColor="@color/orange" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/yishouchu"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/qiandao_height"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/button2" />

                    <TextView
                        android:id="@+id/yiqiandao"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textColor="@color/orange" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/yiqiandao"
                        android:textColor="@color/black" />
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:background="@drawable/background_repeat"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/menu_name"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/bottom"
            android:textSize="@dimen/login_bottom_textSize" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:src="@drawable/logo" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:src="@drawable/call" />
    </FrameLayout>

</FrameLayout>
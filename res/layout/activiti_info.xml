<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical" >

        <include
            android:layout_width="fill_parent"
            android:layout_height="@dimen/bottom_height"
            android:layout_gravity="bottom"
            layout="@layout/activity_title" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/activity_pic"
                android:layout_width="@dimen/qiandao_width"
                android:layout_height="@dimen/qiandao_height" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/activity_infosize_2" >
                </TextView>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp" >

                    <TableRow>

                        <TextView
                            android:id="@+id/begin_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/begintime"
                            android:textColor="@color/black"
                            android:textSize="@dimen/activity_infosize_2" >
                        </TextView>

                        <TextView
                            android:id="@+id/act_begin_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="2dp"
                            android:singleLine="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/activity_infosize_1" >
                        </TextView>
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/endtime"
                            android:textColor="@color/black"
                            android:textSize="@dimen/activity_infosize_2" >
                        </TextView>

                        <TextView
                            android:id="@+id/act_end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="2dp"
                            android:singleLine="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/activity_infosize_1" >
                        </TextView>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/status"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/huodong_button1"
            android:onClick="status"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="5dp"
                android:text="@string/status"
                android:textColor="@color/white"
                android:textSize="@dimen/qiandao_button" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/qiandao"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/huodong_button2"
            android:onClick="qiandao"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="5dp"
                android:text="@string/qiandao"
                android:textColor="@color/white"
                android:textSize="@dimen/qiandao_button" />
        </LinearLayout>
    </LinearLayout>

    <include
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bottom_height"
        android:layout_gravity="bottom"
        layout="@layout/bottom" />

</FrameLayout>